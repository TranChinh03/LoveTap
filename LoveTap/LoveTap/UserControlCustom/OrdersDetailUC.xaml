            <!--BOTTOM BAR-->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="#FF79A7CB" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                          >Sub Total:</TextBlock>
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                          Margin="5 0 0 0" Text="{Binding SubTotal}" TextWrapping ="Wrap" Width="140"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" BorderBrush="#FF79A7CB" BorderThickness="1">
                    <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Customer:"
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                         ></TextBlock>
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="Normal" Padding="5 0"
                         Text="{Binding CustomerName}" TextWrapping ="Wrap" Width="160"></TextBlock>
                        </StackPanel>

                        <StackPanel  Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                          >Phone:</TextBlock>
                            <TextBlock 
                           Foreground="#FF5684B0"   FontWeight="Normal" Padding="5 0"
                          Text="{Binding Phone}" TextWrapping ="Wrap" Width="175" ></TextBlock>
                        </StackPanel>


                        <StackPanel  Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                         >Address:</TextBlock>
                            <TextBlock 
                           Foreground="#FF5684B0"   FontWeight="Normal" Padding="5 0"
                         Text="{Binding Address}" TextWrapping ="Wrap" Width="165"></TextBlock>
                        </StackPanel>


                    </StackPanel>
                </Border>

                <Border Grid.Column="2" BorderBrush="#FF79A7CB" BorderThickness="1">
                    <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                         >Employee:</TextBlock>
                            <TextBlock 
                           Foreground="#FF5684B0"   FontWeight="Normal" Padding="5 0"
                         Text="{Binding EmployeeName}" TextWrapping ="Wrap" Width="140"></TextBlock>
                        </StackPanel>

                        <StackPanel  Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                          >Employee ID:</TextBlock>
                            <TextBlock 
                           Foreground="#FF5684B0"   FontWeight="Normal" Padding="5 0"
                          Text="{Binding EmployeeID}" TextWrapping ="Wrap" Width="125" ></TextBlock>
                        </StackPanel>


                        <StackPanel  Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock 
                           Foreground="#FF5684B0"  FontWeight="DemiBold"
                         >Branch ID:</TextBlock>
                            <TextBlock 
                           Foreground="#FF5684B0"   FontWeight="Normal" Padding="5 0"
                         Text="{Binding Branch}" TextWrapping ="Wrap" Width="150"></TextBlock>
                        </StackPanel>


                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
