<UserControl x:Class="LoveTap.UserControlCustom.CustomerDetailUC"
        xmlns:uc="clr-namespace:LoveTap.UserControlCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoveTap.UserControlCustom"
        mc:Ignorable="d"
        Name="ucCustomerDetail"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">


    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="7.5*"/>
        </Grid.RowDefinitions>
        <!--Top Button-->
        <DockPanel Margin="15,0,15,0">
            <TextBlock FontSize="20"
                       FontWeight="Black"
                       Foreground="{StaticResource Catalina Blue}"
                       VerticalAlignment="Center"
                       >#KH001</TextBlock>
            <Button DockPanel.Dock="Right" Style="{StaticResource OrangeButton}"
                    HorizontalAlignment="Right" >Back</Button>
            <Button DockPanel.Dock="Right" Style="{StaticResource greenButton}"
                    HorizontalAlignment="Right" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Download" />
                    <TextBlock Margin="8,0,0,0">Invoice</TextBlock>
                </StackPanel>
            </Button>
            <Button DockPanel.Dock="Right" Style="{StaticResource greenButton}"
                    HorizontalAlignment="Right" Width="90" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Pencil" />
                    <TextBlock Margin="7,0,0,0">Edit</TextBlock>
                </StackPanel>
            </Button>
        </DockPanel>

        <!--Detail Info-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel HorizontalAlignment="Left" Margin="10 0 0 0" >
                <TextBlock Style="{StaticResource detailText}">Tên khách hàng:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Địa chỉ:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Số điện thoại:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Email:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Ngày đăng kí:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Số đơn hàng:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Doanh số:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Loại khách hàng:</TextBlock>
            </StackPanel>

            <StackPanel Margin="10 0 0 0" Grid.Column="1" HorizontalAlignment="Center" >
                <TextBlock Style="{StaticResource detailTextValue}">Nguyễn Hoàng Duy</TextBlock>
                <TextBlock Style="{StaticResource detailTextValue}">Hẻm 133 Hòa Hưng, phường 12,quận 10</TextBlock>
                <TextBlock Style="{StaticResource detailTextValue}">0908200585</TextBlock>
                <TextBlock Style="{StaticResource detailTextValue}">khachhang01@gmail.com</TextBlock>
                <TextBlock Style="{StaticResource detailTextValue}">20/11/2021</TextBlock>
                <TextBlock Style="{StaticResource detailTextValue}">3</TextBlock>
                <TextBlock Style="{StaticResource detailTextValue}">13000000VND</TextBlock>
                <TextBlock Background="{StaticResource Light Red 62}" Margin="0 15 0 0" Foreground="{StaticResource Burnt Sienna}"
                           HorizontalAlignment="Left" Padding="7">Vàng</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
