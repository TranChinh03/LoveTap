<UserControl x:Class="LoveTap.UserControlCustom.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoveTap.UserControlCustom"
        mc:Ignorable="d"
        Name="ucAddEmployee"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <!--Top Button-->
        <DockPanel Margin="15,0,15,0">
            <Border BorderBrush="{StaticResource Cyan Azure}"  BorderThickness="0.5" CornerRadius="5">
                <TextBox FontSize="20"
                       FontWeight="Black"
                       Foreground="{StaticResource Catalina Blue}"
                       VerticalAlignment="Center" Width="150" materialDesign:HintAssist.Hint="#ID"
                       ></TextBox>
            </Border>
        
            <Button DockPanel.Dock="Right" Style="{StaticResource greenButton}" 
                    HorizontalAlignment="Right" Width="90" Click="doneButton_Click">
                <TextBlock Margin="8,0,0,0" >Done</TextBlock>
            </Button>

            <Button x:Name="backButton" DockPanel.Dock="Right" Style="{StaticResource OrangeButton}"
                    HorizontalAlignment="Right" Click="backButton_Click" >Back</Button>
        </DockPanel>

        <!--Image and Name-->
        <StackPanel Margin="15,0,15,0"
                    Grid.Row="1" Orientation="Horizontal">

            <Border CornerRadius="15" BorderBrush="#5684B0" BorderThickness="0.5" Background="Transparent"  >
                <Button Grid.RowSpan="3"  Padding="0" Height="100"  Width="100" BorderBrush="Transparent"  Background="Transparent">
                    <StackPanel>
                        <TextBlock Foreground="#79A7CB" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center"> Drop file here or <LineBreak/> click to upload</TextBlock>
                        <Image Source="/img/upload.png" Height="15" Width="15"  HorizontalAlignment="Center"></Image>
                    </StackPanel>
                </Button>
            </Border>

            <Grid Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border BorderThickness="0.5" BorderBrush="{StaticResource Cyan Azure}" CornerRadius="5">
                    <TextBox  materialDesign:HintAssist.Hint="Full name"  FontSize="45" FontWeight="DemiBold" Width="500" Height="55" BorderThickness="0" Padding="0" Foreground="{StaticResource Catalina Blue}"/>
                </Border>

                <Border Grid.Row="1" BorderThickness="0.5" BorderBrush="{StaticResource Cyan Azure}" Width="500" Height="35" CornerRadius="5">
                    <TextBox VerticalAlignment="Center"  materialDesign:HintAssist.Hint="Position"  FontSize="20" FontWeight="DemiBold"  BorderThickness="0" Padding="0" Foreground="{StaticResource Catalina Blue}"/>
                </Border>
            </Grid>
        </StackPanel>

        <!--Detail Info-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel HorizontalAlignment="Center" >
                <TextBlock Style="{StaticResource detailText}">Ngày sinh:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Số điện thoại:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Địa chỉ:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Hệ số lương:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Lương cơ bản:</TextBlock>
                <TextBlock Style="{StaticResource detailText}">Chi nhánh:</TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" >
                <TextBox Style="{StaticResource editTextValue}" Margin="0"></TextBox>
                <TextBox Style="{StaticResource editTextValue}"></TextBox>
                <TextBox Style="{StaticResource editTextValue}"></TextBox>
                <TextBox Style="{StaticResource editTextValue}"></TextBox>
                <TextBox Style="{StaticResource editTextValue}"></TextBox>
                <TextBox Style="{StaticResource editTextValue}"></TextBox>
            </StackPanel>
        </Grid>



    </Grid>
</UserControl>
