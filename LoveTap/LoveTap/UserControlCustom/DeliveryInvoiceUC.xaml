                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"><Bold>EMAIL:</Bold> lovetapcn3@gmail.com</TextBlock>
            </StackPanel>
        </Grid>


        <Grid Margin="0,20,0,0" Grid.Row="2" Grid.RowSpan="2">
            <Image  Source="/img/LoveTapBackground2.png" Margin="0,-18,410,-16"/>
