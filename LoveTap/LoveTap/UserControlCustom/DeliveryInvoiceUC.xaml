                <TextBlock Margin="0,10"  HorizontalAlignment="Left" VerticalAlignment="Center"><Bold>PHONE:</Bold> 0908200585</TextBlock>
            </WrapPanel>
        </Grid>


        <Grid Grid.Row="9" Grid.RowSpan="9">
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="90" Header="NO"></GridViewColumn>
                        <GridViewColumn Width="200" Header="ITEM DESCRIPTION"></GridViewColumn>
                        <GridViewColumn Width="150" Header="QUANTITY"></GridViewColumn>
                        <GridViewColumn Width="100" Header="PRICE"></GridViewColumn>
                        <GridViewColumn Width="110" Header="TOTAL"></GridViewColumn>
